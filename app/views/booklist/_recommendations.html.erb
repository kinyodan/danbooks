<h4> Recommendations </h4>
<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Book Image</th>
      <th>Book title</th>
      <th>messege</th>
      <th>Email</th>
      <th>Date created</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @my_recommendations %>
    <% @my_recommendations.each do |recommendation| %> 
          <tr>
            <td>
              <img style="height: 100px; border-radius: 5px;" src="<%= recommendation.book_image %>" alt="profile-sample6" />                  
            </td>
            <td><%= recommendation.book_title %></td>
            <td><%= recommendation.messege %></td>
            <td><%= recommendation.email_list %></td>
            <td><%= recommendation.created_at %></td>
            <td><%= button_to "delete", recommendation, :method => :delete , class:"btn btn-outline-info"%></td>
          </tr>
    <% end %>
  <% end %>

</table>